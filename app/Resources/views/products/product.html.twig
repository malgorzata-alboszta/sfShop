<div class="col-sm-6 col-md-3">
    <div class="thumbnail clearfix">
        {#                <img src="http://placehold.it/240x200" alt="" class="img-thumbnail">#}
        <img src="http://lorempixel.com/240/200/technics?{{random()}}" alt="" class="img-thumbnail">
        <div class="caption">
            <h3>{{ product.name }}</h3>
            <p>{{ product.description | truncate(50, true, ' (...)') }}</p>
            <div class="pull-left">
                <p>
                    <a href="{{ path('basket_add', {'id': product.id}) }}" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                    <a href="{{path('products_desc',{'id':product.id})}}" class="btn btn-default" role="button">Poka≈º</a>
                </p>
            </div>
            <div class="pull-right">
                <h4 class="text-danger">{{ product.price }}</h4>
            </div>
        </div>
    </div>
</div>