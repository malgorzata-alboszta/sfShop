    <h1>Koszyk</h1>
    {% if basket.products %}
            <a href="{{path('basket_clear')}}" title='Wyczysc koszyk' class="btn btn-danger">Wyczysc</a>
{% endif %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>nazwa</th>
                <th>cena</th>
                <th>ilosc</th>
                <th>Akcje(usun)</th>
            </tr></thead>
        <tbody>
            {% for product in basket.products %}
                <tr>
                    <td>{{product.id}}</td>
                    <td>{{product.name}}</td>
                    <td>{{product.price}}</td>
                    <td>{{product.quantity}}</td>
                    <td>
                    <a href="{{path('basket_remove', {'id': product.id})}}" class="btn btn-warning">Usun z koszyka</a></td>
                </tr>
                {%else%}
                    <tr>
                        <td colspan='5'>Koszyk jest pusty </td>
                    </tr>
            {% endfor %}
        </tbody>
    </table>
